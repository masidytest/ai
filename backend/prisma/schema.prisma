generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String
  createdAt    DateTime @default(now())
  domains      Domain[]
  hostings     Hosting[]
  invoices     Invoice[]
}

model Domain {
  id        String   @id @default(uuid())
  name      String   @unique
  status    String
  expiresAt DateTime
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

model Hosting {
  id        String   @id @default(uuid())
  domain    String
  status    String
  plan      String
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

model CloudServer {
  id      String   @id @default(uuid())
  name    String
  region  String
  size    String
  status  String
  user    User?    @relation(fields: [userId], references: [id])
  userId  String?
}

model Workflow {
  id          String   @id @default(uuid())
  name        String
  nodes       Json
  connections Json
  user        User?    @relation(fields: [userId], references: [id])
  userId      String?
}

model App {
  id         String   @id @default(uuid())
  name       String
  components Json
  layout     Json
  user       User?    @relation(fields: [userId], references: [id])
  userId     String?
}

model Invoice {
  id        String   @id @default(uuid())
  amount    Int
  status    String
  date      DateTime
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}
